<section class="cart py-16">
    <% if(messages.error){ %>
        <span class="text-red-500 text-sm"> <%= messages.error %>  </span>
      <% } %>
    <% if(session.cart) { %>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png">
            <h1 class="ml-4 font-bold text-2xl ">Order List</h1>
        </div>
        <%  for(let pizza of Object.values(session.cart.items) ) {  %>
        <div class="pizza-list py-4">
            <div class="flex items-center">
                <img class="w-24" src="/img/<%= pizza.item.image %>">
                <div class="flex-1 ml-4">
                    <h1><%= pizza.item.name %></h1>
                    <span><%= pizza.item.size %></span>
                </div>
                <span class="flex-1"><%= pizza.qty %> Pcs</span>
                <span class="font-bold text-lg">Rs <%= pizza.qty * pizza.item.price  %></span>
            </div>
        </div>
        <% } %>
        
        <hr>
        <div class="text-right py-4">
            <div >
                <span class="text-lg font-bold">Total Amount</span>
                <span class="amount text-2xl font-bold ml-2">Rs <%= session.cart.totalPrice %></span>
            </div>
            <% if(user){ %>
            <div>
                <form action="/orders" method="POST" class="mt-10">
                    <input name="address" placeholder="Address" class="border border-gray-400 p-2 w-1/2 mb-4" type="text">
                    <input name="phone" placeholder="Phone number" class="border border-gray-400 p-2 w-1/2" type="text">
                    <div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-4" > Order Now</button>
                    </div>
                </form>
            </div>
            <% } else{ %>
            <a href="/login" class="inline-block btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" > Login to continue</a>
            <% } %>
        </div>

    </div>
    <% }else { %>

     <div class="emty-cart py-8">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold  mb-2">Cart Empty</h1>
            <p class="text-gray-500 text-lg mb-10  ">You probably haven't ordered a pizza yet. <br/> To order a pizza, go to the main page</p>
            <img class="w-2/6 mx-auto " src="/img/empty-cart.png">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12 ">Go Back</a>
        </div>

    </div>
    <% } %>
</section>